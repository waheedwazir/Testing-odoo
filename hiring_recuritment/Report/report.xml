<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_paperformat_ids" model="report.paperformat">
    <field name="name">Custom Paper Format</field>
    <field name="default" eval="True"/>
    <field name="format">custom</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">15</field>
    <field name="margin_bottom">10</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">3</field>
    <field name="dpi">90</field>
</record>
                <report
                    id="offer_letter_report_ids"
                    model="hr.applicant"
                    report_type="qweb-pdf"
                    string="Offer Letter"
                    name="hiring_recuritment.offer_letters_report"
                    file="hiring_recuritment.offer_letters_report"
                    paperformat="hiring_recuritment.custom_paperformat_ids"
                    attachment="'Offer letter'"
                />

         <template id="offer_letter_report_header_ids">
            <t t-set="company" t-value="user.company_id"/>
            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                style="height:32px;width:90px;margin-left:23px"/>
        </template>


    </data>
</odoo>