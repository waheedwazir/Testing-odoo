<odoo>
    <data>
        <record id="hiring_recuritment_view_form" model="ir.ui.view">
            <field name="name">hiring_recuritment_view_form</field>
            <field name="model">hiring.recuritment</field>
            <field name="arch" type="xml">
                <form string="hiring_recuritment_form">
                    <header>
                        <field name="state" widget="statusbar" default="new"/>
                        <button name="button_submit" string="Submit" class="oe_highlight" type="object"
                                groups="hiring_recuritment.group_hiring_user" attrs="{'invisible':[('state', '!=', 'new')]}"/>
                        <button name="button_hod_approval" string="HOD Approval" class="oe_highlight" type="object"
                                groups="hiring_recuritment.group_hiring_manager" attrs="{'invisible':[('state', '!=', 'submit')]}"/>
                        <button name="button_hr_approval" string="HR Approval" class="oe_highlight" type="object"
                                groups="hiring_recuritment.group_hiring_hr_manager" attrs="{'invisible':[('state', '!=', 'hod')]}"/>
                        <button name="button_reject" string="Reject" class="oe_highlight" type="object"
                                groups="hiring_recuritment.group_hiring_manager" attrs="{'invisible':[('state', 'in', ('new', 'reject','hr'))]}"/>
                        <button name="button_draft" string="Reset to draft" class="oe_highlight" type="object"
                                groups="hiring_recuritment.group_hiring_manager" attrs="{'invisible':[('state', '!=', 'hr')]}"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="requestor" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                                        attrs="{'readonly':[('state', '!=', 'new')]}"/>
                                <field name="department" force_save="1" invisible="1"/>
                                <field name="sub_department" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" force_save="1"/>
                                <field name="disignation_of_employee" readonly="1"/>
                            </group>
                            <group>
                                <field name="request_date" readonly="1"/>
                                <field name="position_type" attrs="{'readonly':[('state', '!=', 'new')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Job Details">
                                <field name="job_detail_line" attrs="{'readonly':[('state', '!=', 'new')]}">
                                    <tree editable="bottom"   options="{'no_create_edit': True}">
                                        <field name="hiring_department" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                        <field name="new_position" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                        <field name="job_type"/>
                                        <field name="no_of_position"/>
                                        <field name="location_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                        <field name="pay" invisible="1"/>
                                        <field name="expected_start_date" invisible="1"/>
                                    </tree>
                                </field>

                            </page>
                            <page string="Resigned Employees" attrs="{'invisible':[('position_type', '=', 'new_hiring')]}">
                                <field name="hiring_recritment_line" attrs="{'readonly':[('state', '!=', 'new')]}">
                                    <tree editable="bottom">
                                        <field name="employee_name" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                        <field name="report_to"/>
                                        <field name="department_id"/>
                                        <field name="designation"/>
                                        <field name="date_of_resignation"/>
                                        <field name="reason"/>

                                    </tree>
                                </field>
                            </page>
                            <page string="Internal Notes">
                                <field name="notes" placeholder="Internal note..."  attrs="{'readonly':[('state', '!=', 'new')]}"/>
                            </page>

                        </notebook>
                        <group string="Preferred Sourcing channel">
                            <field name="internal_job_posting" attrs="{'readonly':[('state', '!=', 'new')]}"/>
                            <field name="external_posting" attrs="{'readonly':[('state', '!=', 'new')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hiring_recuritment_view_tree" model="ir.ui.view">
            <field name="name">hiring_recuritment_view_tree</field>
            <field name="model">hiring.recuritment</field>
            <field name="arch" type="xml">
                <tree string="hiring_recuritment_tree">
                    <field name="requestor"/>

                    <field name="sub_department"/>
                    <field name="disignation_of_employee" force_save="1"/>
<!--                    <field name="location"/>-->
                    <field name="request_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hiring_recuritment_view_search" model="ir.ui.view">
            <field name="name">hiring.recuritment.view.search</field>
            <field name="model">hiring.recuritment</field>
            <field name="arch" type="xml">
                <search string="hiring_recuritment_tree">
                    <field name="requestor"/>
                    <field name="department"/>
                    <separator/>
                    <filter string="Submit" name="submit" domain="[('state', '=', 'submit')]"/>
                    <filter string="HOD Approval" name="hod" domain="[('state', '=', 'hod')]"/>
                    <filter string="HR Approval" name="hr" domain="[('state', '=', 'hr')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'reject')]"/>
<!--                    <filter string="Parent Department" name="groupby_department" domain="[]" context="{'group_by': 'department'}"/>-->
                    <filter string="Department" name="groupby_subdepartment" domain="[]" context="{'group_by': 'sub_department'}"/>
                    <filter string="Requestor" name="groupby_requestor" domain="[]" context="{'group_by': 'requestor'}"/>
                    <filter string="Postion Type" name="groupby_position" domain="[]" context="{'group_by': 'position_type'}"/>
                </search>
            </field>
        </record>



        <record id="hiring_recuritment_action_id" model="ir.actions.act_window">
            <field name="name">Hiring Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hiring.recuritment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="hiring_recuritment_root_id" name="Hiring Request" web_icon="hiring_recuritment,static/description/icon.png" sequence="1" groups="group_hiring_user"/>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="hiring_recuritment_submenu_id" name="Hiring Request" parent="hiring_recuritment_root_id"
                  action="hiring_recuritment_action_id" sequence="2" groups="group_hiring_user"/>


    </data>
</odoo>