<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="offer_letter_allowance_id" model="ir.ui.view">
            <field name="name">Offer Letter Allowance</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">

                <notebook position="inside">
                    <page string="Allowances and Benefits" name="allowance">
                        <group>
                            <group>
                                <field name="fuel_allowance"/>
                                <field name="internet_allowance"/>
                            </group>
                            <group>
                                <field name="hospitalization"/>
                                <field name="opd_coverage"/>
                                <field name="total_gross_salary" invisible="1"/>
                            </group>
                        </group>
                    </page>
               </notebook>

            </field>
        </record>
    </data>
</odoo>